<h1>New dependent for <%= "#{h(@item.description)}"%></h1>

<% form_for([ @item, @dependent]) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :item_id %>

<table>
  <tr>
    <td><%= f.label :pn %></td>
    <td><%= f.text_field :pn %></td>
  </tr>
  <tr>
    <td><%= f.label :model %></td>
    <td><%= f.text_field :model %></td>
  </tr>
  <tr>
    <td><%= f.label :note %></td>
    <td><%= f.text_field :note %></td>
  </tr>
  <tr>
    <td><%= f.submit 'Create' %></td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'Back', item_dependents_path( @item.id ) %>