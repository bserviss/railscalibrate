<h1>Editing dependentfor <%= "#{h(@item.description)}"%></h1>

<% if @dependent.errors.any? %>
<h2 style="color: red"><%= pluralize(@dependent.errors.count, "error") %> prohibited this vendor from being saved:</h2>
<ul>
<% @dependent.errors.full_messages.each do |msg| %>
  <li style="color: red"><%= msg %></li>
<% end %>
</ul>
<% end %>

<%= form_for([ @item,@dependent]) do |f| %>
  <%= f.hidden_field :item_id %>

<table>
  <tr>
    <td><%= f.label :pn %></td>
    <td><%= f.text_field :pn %></td>
  </tr>
  <tr>
    <td><%= f.label :model %></td>
    <td><%= f.text_field :model %></td>
  </tr>
  <tr>
    <td><%= f.label :note %></td>
    <td><%= f.text_field :note %></td>
  </tr>
  <tr>
    <td><%= f.submit 'Update' %></td>
  </tr>
<% end %>
</table>

