<div class="digg_pagination">
    <%= will_paginate @dependents, :container => false %>
</div>

<p/>

<% if @dependents.any? %>

		<% @dependents.each_with_index do |dependent, index | %>

				<div>
					<div style="float:left; width:300px">
						<p><%= get_image_tag_from_item_id(dependent.item_id) %></p>
					</div>
				
				<div style="float:left; width:200px">
					<p><strong><%= link_to get_item_description_from_id( dependent.item_id ), item_path( dependent.item_id )%> </strong></p>

				  	<p><strong>Model: </strong><%= link_to h(dependent.model), item_dependent_path( dependent.item_id,dependent.id ) %></p>

					<p><strong>Note: </strong><%= h dependent.note %> </p>
				</div>
				<div style="clear: both;"> </div>
				<hr />

		<% end %>
	
<% else %>

	<p>No Dependents to Show</p>

<% end %>

<p/>

<div class="digg_pagination">
    <%= will_paginate @dependents, :container => false %>
</div>
