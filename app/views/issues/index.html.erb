<h1>Showing all Issues for <%= "#{h(@item.description)}"%> </h1>

<table>
  <tr>
    <th>Description</th>
    <th>Created At</th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= link_to (h issue.description), edit_item_issue_path( @item.id, issue.id ) %></td>
    <% if !issue.created_at.nil? %>
      <td><%=h issue.created_at.strftime('%m/%d/%Y') %></td>
    <% end  %>
  </tr>
<% end  %>
</table>

<p><%= link_to 'New Issue', new_item_issue_path( @item.id ) %></p>
<p><%= link_to "Back to #{h(@item.description)}", item_path( @item ) %></p>
<p><%= link_to 'Back to Summary Page', items_path %></p>